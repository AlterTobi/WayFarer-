{
  "manifest_version": 2,

  "name": "WayFarer+",
  "description": "Adds functionality and style to NianticLabs Wayfarer",
  "version": "1.6",

  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "settings/popup.html",
    "default_title": "WayFarer+"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["*://wayfarer.nianticlabs.com/*"],
      "js": ["lib/jq/jquery-3.4.1.min.js", "js/options.js", "js/styler.js","js/mods/nominations.js", "js/mods/review.js","js/mods/profile.js", "main.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "pageJs/*.js",
    "assets/*"
  ]
}
